<!-- 모달 : 정보 수정(메뉴) -->
<div id="modal-menus-edit" class="modal">
  <div class="modal-header">
    <p>메뉴 수정</p>
    <button type="button" class="btn-close-modal">X</button>
  </div>
  <ul>
    <!-- menus : data로오? 이름 확인 필요 메뉴 데이터임 -->
    <% menus.forEach((menu)=>{ %>
    <li>
      <strong><%= menu.name %></strong>
      <div class="flex-box">
        <p><span class="content-title">이미지</span><%= menu.image %></p>
        <button>이미지 변경</button>
      </div>
      <div class="input-wrap">
        <label for="">음식 이름</label>
        <input type="text" id="menus-edit-name" value="<%= menu.name %>" />
      </div>
      <div class="input-wrap">
        <label for="">가격</label>
        <input type="text" id="menus-edit-name" value="<%= menu.price %>" />
      </div>
    </li>
    <% }) %>
  </ul>
  <button id="btn-menus-edit">적용하기</button>
</div>
